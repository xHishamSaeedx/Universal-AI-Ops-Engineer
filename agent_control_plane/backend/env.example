# Agent Control Plane Configuration

# Application settings
APP_NAME=Agent Control Plane
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=9001

# Target server (monitoring)
TARGET_API_BASE_URL=http://localhost:8000
TARGET_CONTAINER_NAME=target_server_api
TARGET_DB_CONTAINER_NAME=target_server_db

# Action server (remediation) - not connected yet
ACTION_SERVER_URL=http://localhost:9000

# LLM
GROQ_API_KEY=your-key-here
LLM_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0.3

# RAG (for future use)
VECTOR_STORE_PATH=./data/vector_store
RUNBOOKS_PATH=./data/runbooks

# Monitoring
POLL_INTERVAL_SECONDS=30
ANOMALY_THRESHOLD_ERROR_RATE=50.0
LOG_TAIL_LINES=100

# Docker settings for log monitoring
DOCKER_SOCKET_PATH=/var/run/docker.sock
USE_DOCKER_API=true
