# Action Server Configuration

# Application settings
APP_NAME="Action Server - Remediation Control"
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=9000

# Target server configuration (for health checks and verification)
TARGET_API_BASE_URL=http://localhost:8000
TARGET_DOCKER_COMPOSE_PATH=../../target_server/docker-compose.yml

# Safety settings
MAX_RESTARTS_PER_MINUTE=5
ACTION_TIMEOUT_SECONDS=120
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Audit logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=action_server_audit.log
