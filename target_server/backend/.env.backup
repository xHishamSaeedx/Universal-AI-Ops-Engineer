# Example environment for running the TARGET backend locally
# with Postgres running in Docker.
#
# Start DB:
#   docker compose -f ../docker-compose.db.yml up -d
# Run backend:
#   uvicorn main:app --reload --port 8000

DATABASE_URL=postgresql://postgres:password@localhost:5432/target_server
DEBUG=true

# Intentionally fragile pool settings for the pool-exhaustion scenario
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=3

# External API key (used for testing env var chaos scenarios)
# This simulates a service that depends on an external API key
EXTERNAL_API_KEY=valid_api_key_12345

